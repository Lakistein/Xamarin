<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns = "http://xamarin.com/schemas/2014/forms" xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml" x:Class = "SlidingPuzzle.GamePage">
	<ContentPage.Content>
		<StackLayout BackgroundColor = "White"
			Orientation = "Vertical">
			<StackLayout.Children>
				<StackLayout Padding = "10,10,10,10"
					Orientation = "Horizontal"
					HorizontalOptions = "Fill"
					VerticalOptions = "Start"
					BackgroundColor = "Black">
					<StackLayout.Children>
						<Label x:Name = "lblMoves"
							VerticalOptions = "Start"
							Text = "Moves: "
							TextColor = "White"
							FontSize = "Large" />
					</StackLayout.Children>
				</StackLayout>
				<Grid x:Name = "grid"
					HorizontalOptions = "CenterAndExpand"
					VerticalOptions = "CenterAndExpand"
					RowSpacing = "5"
					ColumnSpacing = "5"
					BackgroundColor = "Gray"
					Padding = "10,10,10,10">
				</Grid>
			</StackLayout.Children>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>