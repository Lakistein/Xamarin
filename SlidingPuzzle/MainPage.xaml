<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns = "http://xamarin.com/schemas/2014/forms" xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml" x:Class = "SlidingPuzzle.MainPage">
	<ContentPage.Content>
		<StackLayout x:Name = "stkL"
			HorizontalOptions = "FillAndExpand"
			VerticalOptions = "CenterAndExpand"
			BackgroundColor = "Transparent">
			<StackLayout.Children>
				<Button Text = "Start"
					Clicked = "OnBtnStart" />
				<Picker x:Name = "picker"
					SelectedIndexChanged = "pickerChanged">
					<Picker.Items>
						<x:String>Board Size: 3 x 3</x:String>
						<x:String>Board Size: 4 x 4</x:String>
						<x:String>Board Size: 5 x 5</x:String>
					</Picker.Items>
				</Picker>
			</StackLayout.Children>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>	